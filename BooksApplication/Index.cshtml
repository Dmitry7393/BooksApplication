@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/Scripts/requests/get-selected-genre.js"></script>
    <script src="~/Scripts/requests/get-genre.js"></script>

    <script src="~/Scripts/requests/delete-book.js"></script>

    <script src="~/Scripts/requests/get-books.js"></script>
    <script src="~/Scripts/requests/show-books.js"></script>

    <script src="~/Scripts/requests/add-book.js"></script>
    <script src="~/Scripts/requests/add-genre.js"></script>

    <script src="~/Scripts/requests/init-view.js"></script>
    <script src="~/Scripts/requests/edit-book.js"></script>

    <script src="~/Scripts/requests/show_edited_book.js"></script>
    <style>
        div {
            display: inline-block;
            margin: 20px;
        }

        #tableBlock {
            width: auto;
        }

        #editBlock {
            display: none;
            float: right;
        }

        #createBlock {
            float: right;
        }
    </style>
</head>
<body>
    <div>
        <!--Add new genre-->
        <label>Enter new genre</label>
        <input id="textBoxGenre" type="text" />
        <button id="btnAddGenre">Add genre</button>
        <br />

        <select id="dropDownListGenres"></select>
    </div>
    <br />
    <div id="tableBlock"></div>

    <div id="editBlock">
        <p><b>Редактирование книги</b></p>
        <table>
            <tr><td><input type="hidden" id="editId" /></td><td></td></tr>
            <tr><td><label>Название: </label></td><td><input type="text" id="editName" /></td></tr>
            <tr><td><label>Автор: </label></td><td><input type="text" id="editAuthor" /></td></tr>
            <tr><td><label>Год: </label></td><td><input type="text" id="editYear" /></td></tr>
            <tr><td><label>Издательство: </label></td><td><input type="text" id="editPublisher" /></td></tr>
            <tr><td><label>Жанр (id): </label></td><td><select id="listGenresEditing"></select></td></tr>

        </table>
        <button id="editBook">Сохранить</button>
    </div>
    <div id="createBlock">
        <p><b>Добавление книги</b></p>
        <table>
            <tr><td><label>Название: </label></td><td><input type="text" id="addName" /></td></tr>
            <tr><td><label>Автор: </label></td><td><input type="text" id="addAuthor" /></td></tr>
            <tr><td><label>Год: </label></td><td><input type="text" id="addYear" /></td></tr>
            <tr><td><label>Издательство: </label></td><td><input type="text" id="addPublisher" /></td></tr>
            <tr><td><label>Жанр: </label></td><td><select id="listGenres"></select></td></tr>
        </table>
        <button id="addBook" onclick="AddBook()">Сохранить</button>
    </div>
</body>
</html>
